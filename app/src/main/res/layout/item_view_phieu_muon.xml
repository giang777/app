<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="#E53935"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/icon_books"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="8"
            android:padding="10dp">

            <TextView
                android:id="@+id/item_phieuMuon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Tên"
                android:textSize="10sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/item_phieuMuon_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Sách :"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/item_phieuMuon_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Giá :"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/item_phieuMuon_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Ngày mượn :"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/item_phieuMuon_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Trạng thái :"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/item_phieuMuon_edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_edit"
                />

            <ImageView
                android:id="@+id/item_phieuMuon_tich"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img_v"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>