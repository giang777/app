<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm thủ thử"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#E53935"
            android:layout_marginBottom="20dp"
            />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/icon_person"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:gravity="center"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/FRAGMENT_ADDTT_Name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Full name"
            android:layout_marginBottom="40dp"
            android:drawableStart="@drawable/icon_person"
            android:background="@drawable/edtdangnhap"
            />

        <EditText
            android:id="@+id/FRAGMENT_ADDTT_TK"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Username"
            android:layout_marginBottom="40dp"
            android:drawableStart="@drawable/icon_person"
            android:background="@drawable/edtdangnhap"
            />

        <EditText
            android:id="@+id/FRAGMENT_ADDTT_MK"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginBottom="40dp"
            android:drawableStart="@drawable/icon_lock"
            android:background="@drawable/edtdangnhap"
            />
        <EditText
            android:id="@+id/FRAGMENT_ADDTT_MK2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginBottom="20dp"
            android:drawableStart="@drawable/icon_lock"
            android:background="@drawable/edtdangnhap"
            />
        <Button
            android:id="@+id/FRAGMENT_ADDTT_BTN"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#DD1D1D"
            android:text="Thêm thủ thư"
            />


    </LinearLayout>


</LinearLayout>